<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1>
                    <%= title %>
                </h1>
                <form class="form" method="post">
                    <div class="form-group">
                        <label for="NameTextField">Name</label>
                        <input type="text" class="form-control" id="NameTextField" 
                        placeholder="Game Name" name="name" value="<%= game.name %>" required>
                    </div>
                    <div class="form-group">
                        <label for="CostTextField">Cost</label>
                        <input type="text" class="form-control" id="CostTextField" 
                        placeholder="Cost" name="cost" value="<%= game.cost %>" required>
                    </div>
                    <div class="form-group">
                        <label for="RatingTextField">Rating</label>
                        <input type="text" class="form-control" id="RatingTextField" 
                        placeholder="Rating" name="rating" value="<%= game.rating %>" required>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <% include ../partials/footer.ejs %>